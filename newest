function addFilter(){
document.getElementById("filterDiv").innerHTML += filter;


}



function removeFilter(){

var filterDiv = document.getElementById("filterDiv");

filterDiv.removeChild(filterDiv.lastChild);
filterDiv.removeChild(filterDiv.lastChild);

}


